# Environment variables for Docker Compose

# Path to your music folder
MUSIC_PATH=/path/to/your/music

# Domain name
DOMAIN=yourdomain.com

# Email for Let's Encrypt
LETSENCRYPT_EMAIL=admin@yourdomain.com

# Git info (optional, for version tracking)
GIT_SHA=dev
GIT_TAG=v0.58.0-QO

# OAuth Configuration (optional)
# Uncomment and fill in to enable OAuth login
# NOTE: When running 'make dev' or 'make server', variables from .env are automatically loaded
# Use 'make show-env' to verify loaded environment variables
# IMPORTANT: Use KEY=value syntax (not KEY: value)

# OAuth Redirect URL (required for local development)
# For local dev: http://localhost:4533/auth/oauth/callback
# For production: https://yourdomain.com/auth/oauth/callback
#ND_OAUTH_REDIRECTURL="http://localhost:4533/auth/oauth/callback"

#ND_OAUTH_ENABLED="true"
#ND_OAUTH_AUTOCREATEUSER="true"
#ND_OAUTH_AUTOCREATEUSERADMIN="false"

# Google OAuth
#ND_OAUTH_GOOGLE_ENABLED="true"
#ND_OAUTH_GOOGLE_CLIENTID="your-google-client-id"
#ND_OAUTH_GOOGLE_CLIENTSECRET="your-google-client-secret"

# Apple OAuth
#ND_OAUTH_APPLE_ENABLED="true"
#ND_OAUTH_APPLE_CLIENTID="your-apple-client-id"
#ND_OAUTH_APPLE_CLIENTSECRET="your-apple-client-secret"

# Instagram OAuth
#ND_OAUTH_INSTAGRAM_ENABLED="true"
#ND_OAUTH_INSTAGRAM_CLIENTID="your-instagram-client-id"
#ND_OAUTH_INSTAGRAM_CLIENTSECRET="your-instagram-client-secret"

# Facebook OAuth
#ND_OAUTH_FACEBOOK_ENABLED="true"
#ND_OAUTH_FACEBOOK_CLIENTID="your-facebook-client-id"
#ND_OAUTH_FACEBOOK_CLIENTSECRET="your-facebook-client-secret"
